{
  "name": "@convoverse/server",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/bundle.js",
  "scripts": {
    "start": "node dist/bundle.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "build": "node esbuild.config.js --minify --sourcemap",
    "typecheck:watch": "tsc --noEmit --watch --preserveWatchOutput > logs/types.log 2>&1",
    "build:watch": "node esbuild.config.js --watch > logs/build.log 2>&1",
    "dev:run": "nodemon --watch dist --delay 100ms -ext js --exec \"node dist/server.js\" > logs/server.log 2>&1",
    "dev:ts-node": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "dev": "concurrently -k \"npm run build:watch\" \"npm run typecheck:watch\" \"npm run dev:run\""
  },
  "dependencies": {
    "@ai-sdk/google": "^3.0.6",
    "@convoverse/database": "*",
    "@convoverse/queue": "*",
    "@convoverse/redis": "*",
    "ai": "^6.0.27",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.66.1",
    "compression": "^1.8.1",
    "cookie": "^0.7.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "express-xss-sanitizer": "^2.0.1",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.9.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^9.0.1",
    "morgan": "^1.10.1",
    "rate-limit-redis": "^4.2.2",
    "socket.io": "^4.8.1",
    "winston": "^3.18.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cookie": "^0.6.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.6",
    "@types/express-rate-limit": "^5.1.3",
    "@types/express-xss-sanitizer": "^2.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
